generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserSettings {
    userId String @id
    currency String @default("USD")
}

model Category {
    createdAt DateTime @default(now())
    name String @id
    userId String
    icon String
    type String @default("income")

    @@unique([userId, name, type])
}

model Transaction {
    id String @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    amount Float
    description String?
    date DateTime
    userId String
    type String @default("income")
    category String
    categoryId String
}

model MonthHistory {
    userId String
    day Int
    month Int
    year Int
    income Float @default(0)
    expense Float @default(0)

    @@id([userId, day, month, year])
}

model YearHistory {
    userId String
    month Int
    year Int
    income Float @default(0)
    expense Float @default(0)

    @@id([userId, month, year])
}